$cool-orange =  #fe9126

body
	scroll-behaivior smooth
	margin 0
	padding 0

header
	background #393737

.special-offers
	padding-left 18px
	width 35%

#top-nav
	background #000
	padding 9px 0
	margin 0

.test
	background red
	
.bg-light
	background $cool-orange !important
.dropdown-menu
	background #393737

.navbar-light .navbar-nav .show > .nav-link, .navbar-light .navbar-nav .active > .nav-link, .navbar-light .navbar-nav .nav-link.show, .navbar-light .navbar-nav .nav-link.active, .navbar-light .navbar-nav .nav-link
	color #fff

.show > .nav-link:hover
	color $cool-orange

.navbar-light .navbar-nav .nav-link.disabled
	color #ECECEC

.navbar-light .navbar-brand
	color #fff
	
.navzindex
	z-index 1100
	a
		color $cool-orange
		font-weight bold
	a:hover
		color white
	
footer 
	background #000
	
	ul 
		list-style-type none
		li i
			margin-right 5px
			color $cool-orange
		li a
			color #afafaf
			text-decoration none !important
			font-weight bold
			transition .5s ease	
		li a:hover
			color $cool-orange	
	h3
		color white
		margin-top 30px
	.address
		color #afafaf
	.footer-botm
		background #393737 !important
		color #afafaf
		a:hover
			i
				transition .5s ease
				color #afafaf
			
	.footer-copy
		text-align center
		color #afafaf
		a
			color $cool-orange
			text-decoration none
			transition .5s ease
		a:hover
			color #afafaf

/* Carousel base class */
.carousel 
	margin-bottom 4rem

/* Since positioning the image, we need to help out the caption */
.carousel-caption 
	bottom 3rem
	z-index 10


// /* Declare heights because of positioning of img element */
.carousel-item 
	height 32rem
	background-color #777

.carousel-item 
	img 
		position absolute
		top 0
		left 0
		min-width 100%
		height 32rem


.category
	border 0.5px solid $cool-orange
	background-color #f5f5f5
	margin 10px 0
	
.products 
	a:hover
		color rgba(0,0,0,0.5) !important

.items-all
	margin 15px 0

.btn-outline-default
	background $cool-orange
	color white
.btn:focus
	box-shadow 0 0 0 0.2rem rgba(254, 145, 38, 0.45)

.form-control:focus
	box-shadow 0 0 0 0.2rem rgba(254, 145, 38, 0.75)
	border-color $cool-orange
	
.form-control
	border-color $cool-orange

.btn-link
	text-decoration none !important
	color $cool-orange
	transition .5s ease

.btn-link:hover
	color #afafaf !important
		
.item-navigation {
	width 100%
	text-align center
}

textarea {
	resize none
}
main
	min-height 800px;